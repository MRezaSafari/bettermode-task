{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@bettermode/pages/*": ["./src/pages/*"],
      "@bettermode/utilities": ["./src/utilities/index.ts"],
      "@bettermode/components": ["./src/components/index.ts"],
      "@bettermode/models": ["./src/models/index.ts"],
      "@bettermode/stores": ["./src/stores/index.ts"],
      "@bettermode/hooks": ["./src/hooks/index.ts"],
      "@bettermode/queries": ["./src/queries/index.ts"],
      "@bettermode/gql": ["./src/gql/index.ts"]
    }
  },
  "include": ["src", "*.graphql", "tsconfig.json"]
}
